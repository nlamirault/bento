{
    "variables": {
        "vm_name": "Kali-1.0.9-amd64",
        "disk_size": "2000",
        "memory_size": "1024",
        "cpus": "1",
        "iso_url": "http://cdimage.kali.org/kali-1.1.0a/kali-linux-1.1.0a-amd64.iso",
        "iso_checksum": "2b8d2db20e2709c5e9e0f9f9bbd8606c9b9e729f",
        "iso_checksum_type": "sha1",
        "kali_version": "kali-linux-1.1.0a",
        "kali_arch": "amd64",
        "vagrant_cloud_token": "{{env `ATLAS_TOKEN`}}",
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "kali_linux",
        "version": "0.1.0"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "install ",
	        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
	        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{ .Name }} ",
	        "netcfg/get_domain=vagrantup.com ",
	        "fb=false debconf/frontend=noninteractive ",
	        "console-setup/ask_detect=false <wait>",
  	        "console-keymaps-at/keymap=us ",
	        "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait10><wait10><wait10>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "Debian_64",
            "http_directory": "http",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "10000s",
            "vboxmanage": [
	        ["modifyvm", "{{.Name}}", "--nic2", "intnet"],
	        ["modifyvm", "{{.Name}}", "--macaddress2", "080027f34a5d"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "pause_before": "10s",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
            "scripts": [
                "scripts/kali-linux/update.sh",
                "scripts/kali-linux/sudoers.sh",
                "scripts/kali-linux/vagrant.sh",
                "scripts/kali-linux/vbguest.sh",
                "scripts/kali-linux/cleanup.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 9,
	    "keep_input_artifact": true,
            "output":"vagrant/kali/kali-{{ user `kali_version` }}-{{.Provider}}.box"
        }
    ]
}
