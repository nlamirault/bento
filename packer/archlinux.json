{
    "variables": {
        "vm_name": "ArchLinux-2015.07.01",
        "disk_size": "2000",
        "memory_size": "1024",
        "cpus": "1",
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/2015.07.01/archlinux-2015.07.01-dual.iso",
        "iso_checksum": "a025ac8e23131b038a0b7f949faeb04d382e5b25",
        "iso_checksum_type": "sha1",
        "version": "0.3.0",
        "vagrant_cloud_token": "{{env `ATLAS_TOKEN`}}"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -o /etc/pacman.conf http://{{.HTTPIP}}:{{.HTTPPort}}/pacman.conf<enter><wait5>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/prepare-machine.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/install-stage-1.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/poweroff.time<enter><wait>",
                "DISK=/dev/sda bash ./prepare-machine.sh<enter>"
            ],
            "boot_wait": "5s",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": "http/archlinux",
            "shutdown_command": "sudo /sbin/shutdown -hP now",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "ssh_key_path": "vagrant/keys/vagrant.key",
            "disk_size": "{{ user `disk_size` }}",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "{{ user `vm_name` }}",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory_size` }}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "output": "vagrant/archlinux/ArchLinux-{{.Provider}}-{{ user `version`}}.box"
            }
        ]
    ]
}
