{
  "variables": {
    "vm_name": "ArchLinux",
    "disk_size": "20000",
    "memory_size": "1024",
    "cpus": "1",
    "root_password": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_group": "vagrant",
    "vagrant_password": "vagrant",
    "vagrant_hostname": "bento",
    "iso_checksum": "77508eaf2be9f15e22b1cc920db12d4e90c2cf77",
    "iso_checksum_type": "sha1",
    "archlinux_version": "2017.06.01",
    "archlinux_arch": "x86_64",
    "vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}",
    "vagrantcloud_username": "{{env `VAGRANTCLOUD_USERNAME`}}",
    "vagrantcloud_name": "archlinux",
    "version": "2017.06.01"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
        "cat > /tmp/environment_vars.txt << \"EOF\"<enter>",
        "VAGRANT_HOSTNAME={{user `hostname`}}<enter>",
        "ROOT_PASSWORD={{user `root_password`}}<enter>",
        "VAGRANT_USERNAME={{user `vagrant_username`}}<enter>",
        "VAGRANT_GROUP={{user `vagrant_group`}}<enter>",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}<enter>",
        "EOF<enter>",
        "bash install.sh /tmp/environment_vars.txt<enter>"
      ],
      "boot_wait": "5s",
      "iso_url": "https://mirrors.kernel.org/archlinux/iso/{{ user `archlinux_version` }}/archlinux-{{ user `archlinux_version`}}-{{ user `archlinux_arch` }}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "http_directory": "http/archlinux",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "ssh_private_key_file": "vagrant/keys/vagrant.key",
      "disk_size": "{{ user `disk_size` }}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory_size` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/common/vagrant.sh",
        "scripts/archlinux/postinstall.sh",
        "scripts/archlinux/vbguest.sh",
        "scripts/archlinux/desktop.sh",
        "scripts/archlinux/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "output": "vagrant/archlinux/ArchLinux-{{.Provider}}-{{ user `version`}}.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `vagrantcloud_token`}}",
        "box_tag": "{{ user `vagrantcloud_username` }}/{{ user `vagrantcloud_name` }}",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
